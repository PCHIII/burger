<div class="container">
    {{!-- <div class="row"> --}}
        <div class="col-sm-12 text-center mt-3" id="top-ban">
            <h1>EAT ZE BEARGER</h1>

            <img src="/assets/img/burger.jpg" alt="Burger">
        </div>
</div>
        <br>
        <br>
        <div class="container">
            <div class="row">
                <div class="col-sm-12 text-center" class="task">
                
                    {{#each burger_data}}
                    {{#unless this.devoured}}
                    <div class="col-sm-12 text-center">
                        <p>{{this.burger_name}}</p>
                    </div>

                        <div class="col-sm-12 text-center">
                                <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                                <input type="hidden" name="burger_id" type="text" value={{this.id}}>


                                <button type="submit" class="btn btn-outline-danger btn-sm">Devour It!</button>
                                </form>
                            

                        </div>>
                {{!-- </div> --}}
            {{!-- </div>> --}}
        

                {{/unless}}
                {{/each}}

             </div> 
        </div> 

      
        <br>
        <div class="container">
            
        {{!-- <div class="row"> --}}
             <p style="center">DEVOURED BURGERS</p>
           <div class="row justify-content-center">
       
        
        <div class="col-sm-4 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div> 
<br>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-sm-6 text-center enter_selection">

            <form action="/burgers/create" method="POST">
                <input type="text" name="burger_name" class="form-control form-control-lg"
                    placeholder="Create your own Burger here.." value="" id="enter_text">


                <br>
                <button type="submit" class="btn btn-outline-warning btn-sm" id="text-enter-button"> SUBMIT</button>
            </form>

        </div>
    </div>
</div>