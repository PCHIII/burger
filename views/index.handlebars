<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center id="top-ban>
            <h1>Eat Da Burger</h1>
            <img src="/assets/img/burger.jpg" alt="Burger">
            <br>
<br>
            <div class="col-lg-12 text-center" class="task">
                <div class="row">
                    {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class="col-lg-12 text-center">
                    <pre>{{this.ad}}. {{this.burger_name}}</pre>
                </div>
                <div class="col-lg-12 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT"
                    class= "button-size">
                    <input type="hidden" name="burger_id" type="text" value= {{this.id}}>
                    <br>
                    <hr>
                    <button type="submit" class="btn btn-primary">Devour It!</button>
                    </form>
                    <br>
                    <br>
                </div>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
</div>
