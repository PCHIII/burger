<div class="containter">
    <div class="row">
        <div class="col-xs-12 text-center id="top-ban>
            <h1>Eat Da Burger</h1>
            <div class="col=xs-6 text-center" class="task">
                <div class="row">
                    {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class="col-xs-9 text-center">
                    <pre>{{this.ad}}. {{this.burger_name}}</pre>
                </div>
                <div class="col=xs-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT"
                    class= "button-size">
                    <input type="hidden" name="burger_id" type="text" value= {{this.id}}>
                    <br>
                    <button type="submit" class="btn btn-default">Devour It!</button>
                    </form>
                </div>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
</div>
