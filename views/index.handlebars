<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center id="top-ban>
            <h1>Eat Da Burger</h1>
            <img src="/assets/img/burger.jpg" alt="Burger">
            <br>
<br>
            <div class="col-lg-12 text-center" class="task">
                <div class="row">
                    {{#each burger_data}}
                    {{#unless this.devoured}}
                <div class="col-lg-12 text-center">
                    <pre>{{this.ad}}. {{this.burger_name}}</pre>
                </div>
                <div class="col-lg-12 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT"
                    class= "button-size">
                    <input type="hidden" name="burger_id" type="text" value= {{this.id}}>
                    <br>
                    <hr>
                    <button type="submit" class="btn btn-primary">Devour It!</button>
                    </form>
                    <br>
                    <br>
                </div>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>

        <div class="col-lg-12 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder= "{{this.id}}. {{this.burger_name}}"readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>
<br>
<div class="container">
    <div class="row">
        <div class="col-lg-12 text-center enter_selection">
<form action="/burgers/create" method="POST">
<input type="text" name="burger_name" class="form-control" value="" id="enter_text">
<br>
<button type="submit" class="btn btn-secondary" id="text-enter-button"> SUBMIT</button>
</form>
<p>Enter and creat your own Awesome Burger!!!</p>
        </div>
    </div>
</div>
